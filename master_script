#!/bin/bash
#SBATCH --job-name=S5_hybrid_pass
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=4
#SBATCH --mem=15g
#SBATCH --time=48:00:00
#SBATCH --output=/shared/Project1_Resources/GROUP2_Workspace/hybrid_test/%x.out
